{
  "name": "news_app",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node ./dist/main.js",
    "build": "rm -rf dist/ && tsc && webpack --config ./webpack.config.js",
    "watch": "concurrently \"yarn run dev:watch\" \"yarn run dev:serve\"",
    "dev:watch": "webpack --watch --config ./webpack.development.config.js",
    "dev:serve": "DEBUG=knex:query NODE_ENV=development nodemon --watch dist ./dist/main.js",
    "test": "jest",
    "test:ci": "jest --ci",
    "lint:fix": "eslint --fix .",
    "lint": "eslint .",
    "lint:ci": "eslint",
    "translate": "rm -rf ./src/config/i18n/translation/ && i18next 'src/**/*.ts' --config i18n.config.js",
    "translate:ci": "i18next --config i18n.config.js"
  },
  "lint-staged": {
    "**/*.{spec,test}.{ts,tsx}": [
      "yarn test:ci"
    ],
    "**/*.{ts,tsx}": [
      "yarn lint:ci",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/knex": "^0.16.1",
    "@types/multer": "^1.4.5",
    "@types/nodemailer": "^6.4.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "babel": "^6.23.0",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.1",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.3.1",
    "fork-ts-checker-webpack-plugin": "^6.3.2",
    "husky": "^6.0.0",
    "i18next-parser": "^3.7.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.12",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^10.2.1",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.2.3",
    "webpack": "^5.33.2",
    "webpack-cli": "^4.6.0",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.11.0",
    "@aws-sdk/client-ses": "^3.26.0",
    "bcrypt": "^5.0.1",
    "dayjs": "^1.10.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.8.0",
    "helmet": "^4.4.1",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.95.4",
    "multer": "^1.4.2",
    "node-cron": "^3.0.0",
    "nodemailer": "^6.5.0",
    "pg": "^8.5.1",
    "uuid": "^8.3.2"
  }
}
