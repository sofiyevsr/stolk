{
  "name": "news_app",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node ./dist/main.js",
    "build": "rm -rf dist/ && tsc && webpack --config ./webpack.config.js",
    "watch": "concurrently \"yarn run dev:watch\" \"yarn run dev:serve\"",
    "dev:watch": "webpack --watch --config ./webpack.development.config.js",
    "dev:serve": "DEBUG=knex:query NODE_ENV=development nodemon --watch dist ./dist/main.js",
    "test": "jest",
    "test:ci": "jest --ci",
    "lint:fix": "eslint --fix .",
    "lint": "eslint .",
    "lint:ci": "eslint",
    "translate": "rm -rf ./src/config/i18n/translation/ && i18next 'src/**/*.ts' --config i18n.config.js",
    "translate:ci": "i18next --config i18n.config.js"
  },
  "lint-staged": {
    "**/*.{spec,test}.{ts,tsx}": [
      "yarn test:ci"
    ],
    "**/*.{ts,tsx}": [
      "yarn lint:ci",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/knex": "^0.16.1",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.4",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "babel": "^6.23.0",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fork-ts-checker-webpack-plugin": "^6.3.2",
    "husky": "^7.0.2",
    "i18next-parser": "^4.4.0",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.2.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.4.2",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.28.0",
    "@aws-sdk/client-ses": "^3.28.0",
    "bcrypt": "^5.0.1",
    "dayjs": "^1.10.6",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.11.1",
    "got": "^11.8.2",
    "helmet": "^4.4.1",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.95.10",
    "multer": "^1.4.3",
    "node-cron": "^3.0.0",
    "nodemailer": "^6.6.3",
    "pg": "^8.7.1",
    "uuid": "^8.3.2"
  }
}
